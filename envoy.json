{
  "admin": {
    "access_log_path": "/dev/stdout",
    "address": {
      "socket_address": {
        "address": "0.0.0.0",
        "port_value": "${METRICS_PORT}",
        "protocol": "TCP"
      }
    }
  },
  "cluster_manager": {},
  "static_resources": {
    "clusters": [
      {
        "connect_timeout": "10s",
        "dns_lookup_family": "V4_ONLY",
        "lb_policy": "ORIGINAL_DST_LB",
        "name": "opsani_canary_proxy",
        "type": "ORIGINAL_DST"
      }
    ],
    "listeners": [
      {
        "address": {
          "socket_address": {
            "address": "0.0.0.0",
            "port_value": "${ENVOY_PORT}"
          }
        },
        "filter_chains": [
          {
            "filter_chain_match": {
              "application_protocols": []
            },
            "filters": [
              {
                "name": "envoy.tcp_proxy",
                "config": {
                  "stat_prefix": "opsani_canary_proxy_tcp",
                  "cluster": "opsani_canary_proxy",
                  "access_log": [
                    {
                      "name": "envoy.file_access_log",
                      "config": {
                        "path": "/dev/stdout"
                      }
                    }
                  ]
                }
              }
            ]
          },
          {
            "filter_chain_match": {
              "application_protocols": [
                "http/1.0",
                "http/1.1",
                "h2c",
                "h2"
              ]
            },
            "filters": [
              {
                "name": "envoy.http_connection_manager",
                "typed_config": {
                  "@type": "type.googleapis.com/envoy.config.filter.network.http_connection_manager.v2.HttpConnectionManager",
                  "codec_type": "auto",
                  "http_filters": [
                    {
                      "name": "envoy.router",
                      "typed_config": {}
                    }
                  ],
                  "route_config": {
                    "name": "local_service",
                    "virtual_hosts": [
                      {
                        "domains": [
                          "*"
                        ],
                        "name": "backend",
                        "routes": [
                          {
                            "match": {
                              "prefix": "/"
                            },
                            "route": {
                              "cluster": "opsani_canary_proxy"
                            }
                          }
                        ]
                      }
                    ]
                  },
                  "stat_prefix": "opsani_canary_proxy_http",
                  "access_log": [
                    {
                      "name": "envoy.file_access_log",
                      "config": {
                        "path": "/dev/stdout"
                      }
                    }
                  ]
                }
              }
            ]
          }
        ],
        "listener_filters": [
          {
            "name": "envoy.listener.original_dst",
            "typed_config": {}
          },
          {
            "name": "envoy.listener.http_inspector",
            "typed_config": {}
          }
        ]
      }
    ]
  },
  "watchdog": {}
}

